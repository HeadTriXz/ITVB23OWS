<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer Config">
    <description>PHP_CodeSniffer Config for the Hive board game.</description>

    <!-- Exclude directories -->
    <exclude-pattern>public/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>tests/*</exclude-pattern>

    <!-- Include PSR-1 and PSR-12 Standards -->
    <rule ref="PSR1"/>
    <rule ref="PSR12"/>

    <fileExtensions>
        <ext>php</ext>
    </fileExtensions>
</ruleset>
